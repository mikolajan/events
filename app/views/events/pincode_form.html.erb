<h1>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label :pincode, t('links.pincode.input_pincode') %>
    <%= text_field_tag :pincode, params[:pincode], autofocus: true, class: 'form-control', style: "width: 400px" %>
  </div>

  <div class="actions">
    <%= submit_tag t('links.pincode.confirm_pincode'), class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>
