<h3 class="mt-4">Регистрация нового пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="bg-danger mb-3">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Имя', class: '' %>
    <%= f.text_field :name, class: 'form-control', style: "width: 400px" %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Логин (email)', class: 'form-control1' %>
    <%= f.text_field :email, class: 'form-control', style: "width: 400px" %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Пароль', class: 'form-control1' %>
    <%= f.password_field :password, class: 'form-control', style: "width: 400px" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Пароль ещё раз', class: 'form-control1' %>
    <%= f.password_field :password_confirmation, class: 'form-control', style: "width: 400px" %>
  </div>

  <div class="form-action">
    <%= f.submit 'Зарегистрироваться', class: 'btn btn-success' %>
  </div>
<% end %>

<div class="mt-4">
    <%= render "devise/shared/links" %>
</div>
